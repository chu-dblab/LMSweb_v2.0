@model MissionCreateViewModel

@{
    ViewBag.Title = "Edit";
}

@section NavPills {
    <ul class="nav nav-pills me-auto ms-3">
        @Html.Partial("~/Views/Nav/_TeacherNavPartial.cshtml", new TeacherNavViewModel { CourseID = Model.CourseID , ActiveIndex = 0})
    </ul>
}

<div class="container">

    @Html.Partial("~/Views/AllPartial/_ViewTitlePartial.cshtml",
    new ViewTitlePartialViewModel { 
        h1 = @$"課程名稱：{Model.CourseName}",
        h2 = ""})

    <div class="card m-3 p-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal row">
                @* 編輯任務標題 *@
                <h4 class="fs-3 text-center my-1">編輯任務</h4>

                @* 任務ID 隱藏式 *@
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @* 任務名稱 *@
                <div class="mb-3 my-1">
                    @Html.LabelFor(model => model.PostData.Name, new { @class = "form-label ms-2 fs-5 my-1" })
                    <div class="row mx-1">
                        @Html.TextAreaFor(model => model.PostData.Name, new { @class = "form-control col-12 fs-5", rows = "1" })
                        @Html.ValidationMessageFor(model => model.PostData.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* 任務內容 *@
                <div class="mb-3 my-1">
                    @Html.LabelFor(model => model.PostData.Contents, new { @class = "form-label ms-2 fs-5 my-1" })
                    <div class="row mx-1">
                        @Html.TextAreaFor(model => model.PostData.Contents, new { @class = "form-control col-12 fs-5", rows = "10" })
                        @Html.ValidationMessageFor(model => model.PostData.Contents, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3 my-1">
                    @Html.LabelFor(model => model.PostData.StartDate, new { @class = "form-label ms-2 fs-5 my-1" })
                    <div class="row mx-1">
                        @Html.TextBoxFor(model => model.PostData.StartDate, new { @class = "form-control", type = "datetime-local" })
                        @Html.ValidationMessageFor(model => model.PostData.StartDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3 my-1">
                    @Html.LabelFor(model => model.PostData.EndDate, new { @class = "form-label ms-2 fs-5 my-1" })
                    <div class="row mx-1">
                        @Html.TextBoxFor(model => model.PostData.EndDate, new { @class = "form-control", type = "datetime-local" })
                        @Html.ValidationMessageFor(model => model.PostData.EndDate, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <input type="submit" value="儲存" class="btn btn-primary w-auto px-5 ms-auto" />
                        <a class="btn btn-secondary w-auto px-5 ms-1 me-3" href="@Url.Action("Index", "Mission" , new { cid = Model.CourseID })">取消</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
